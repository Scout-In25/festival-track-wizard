# Festival Track Wizard - Environment Variables
# Copy this file to .env and fill in your values for local development

# API Key for development (will override WordPress setting when running dev server)
VITE_API_KEY=your-api-key-here

# API Base URL (optional, defaults to production URLs)
# VITE_API_BASE_URL=https://test-scout-in.scouting.nl
VITE_API_BASE_URL=https://si25.timoklabbers.nl

# Enable debug mode (optional)
VITE_DEBUG=true

# Dev mode authentication simulation (optional)
# Controls which page is shown by default in development mode
# Values: logged_in (shows wizard) | not_logged_in (shows track page)
VITE_DEV_AUTH_MODE=logged_in

# Show tracks only mode (optional)
# When enabled, shows activities list instead of wizard
VITE_SHOW_TRACKS_ONLY=false
